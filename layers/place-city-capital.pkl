extends "extends/place.pkl"
import "../variables.pkl" as v

id = "place-city-capital"
filter {
    "all"
    new {
        "=="
        "capital"
        2
    }
    new {
        "=="
        "class"
        "city"
    }
}
layout {
    `icon-image` = "star-11"
    `icon-size` = 0.8
    `text-anchor` = "left"
    `text-field` = v.text_field_with_return
    `text-font` = v.text_font_regular
    `text-max-width` = 8
    `text-offset` {
        0.4
        0
    }
    `text-size` {
        base = 1.2
        stops {
            new {
                7
                14
            }
            new {
                11
                24
            }
        }
    }
    visibility = "visible"
}
paint {
    `text-color` = "#333"
    `text-halo-color` = "rgba(255,255,255,0.8)"
    `text-halo-width` = 1.2
}