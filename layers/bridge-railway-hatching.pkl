extends "extends/transportation.pkl"

id = "bridge-railway-hatching"
filter {
    "all"
    new {
        "=="
        "brunnel"
        "bridge"
    }
    new {
        "=="
        "class"
        "rail"
    }
}
paint {
    `line-color` = "#bbb"
    `line-dasharray` {
        0.2
        8
    }
    `line-width` {
        base = 1.4
        stops {
            new {
                14.5
                0
            }
            new {
                15
                3
            }
            new {
                20
                8
            }
        }
    }
}