extends "extends/transportation.pkl"

id = "highway-link"
minzoom = 13
filter {
    "all"
    new {
        "!in"
        "brunnel"
        "bridge"
        "tunnel"
    }
    new {
        "in"
        "class"
        "trunk"
        "primary"
        "secondary"
        "tertiary"
    }
    new {
        "=="
        "ramp"
        1
    }
}
layout {
    `line-cap` = "round"
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#fea"
    `line-width` {
        base = 1.2
        stops {
            new {
                12.5
                0
            }
            new {
                13
                1.5
            }
            new {
                14
                2.5
            }
            new {
                20
                11.5
            }
        }
    }
}