extends "extends/transportation.pkl"

id = "highway-primary-casing"
minzoom = 5
filter {
    "all"
    new {
        "!in"
        "brunnel"
        "bridge"
        "tunnel"
    }
    new {
        "in"
        "class"
        "primary"
    }
    new {
        "!="
        "ramp"
        1
    }
}
layout {
    `line-cap` = "butt"
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#e9ac77"
    `line-opacity` {
        stops {
            new {
                7
                0
            }
            new {
                8
                1
            }
        }
    }
    `line-width` {
        base = 1.2
        stops {
            new {
                7
                0
            }
            new {
                8
                0.6
            }
            new {
                9
                1.5
            }
            new {
                20
                22
            }
        }
    }
}