extends "extends/transportation.pkl"

id = "railway-service-hatching"
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "=="
        "class"
        "rail"
    }
    new {
        "has"
        "service"
    }
}
layout {
    visibility = "visible"
}
paint {
    `line-color` = "hsla(0, 0%, 73%, 0.68)"
    `line-dasharray` {
        0.2
        8
    }
    `line-width` {
        base = 1.4
        stops {
            new {
                14.5
                0
            }
            new {
                15
                2
            }
            new {
                20
                6
            }
        }
    }
}