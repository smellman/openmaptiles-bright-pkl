extends "extends/boundary.pkl"

id = "boundary-land-level-4"
minzoom = 2
filter {
    "all"
    new {
        ">="
        "admin_level"
        3
    }
    new {
        "<="
        "admin_level"
        8
    }
    new {
        "!="
        "maritime"
        1
    }
}
layout {
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#9e9cab"
    `line-dasharray` {
        3
        1
        1
        1
    }
    `line-width` {
        base = 1.4
        stops {
            new {
                4
                0.4
            }
            new {
                5
                1
            }
            new {
                12
                3
            }
        }
    }
}