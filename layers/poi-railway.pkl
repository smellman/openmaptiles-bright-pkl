extends "extends/poi.pkl"
import "../variables.pkl" as v

id = "poi-railway"
minzoom = 13
filter {
    "all"
    new {
        "=="
        "$type"
        "Point"
    }
    new {
        "has"
        "name"
    }
    new {
        "=="
        "class"
        "railway"
    }
    new {
        "=="
        "subclass"
        "station"
    }
}
layout {
    `icon-allow-overlap` = false
    `icon-ignore-placement` = false
    `icon-image` = "{class}_11"
    `icon-optional` = false
    `text-allow-overlap` = false
    `text-anchor` = "top"
    `text-field` = v.text_field_with_return
    `text-font` = v.text_font_regular
    `text-ignore-placement` = false
    `text-max-width` = 9
    `text-offset` {
        0
        0.6
    }
    `text-optional` = true
    `text-padding` = 2
    `text-size` = 12
}
paint {
    `text-color` = "#666"
    `text-halo-blur` = 0.5
    `text-halo-color` = "#ffffff"
    `text-halo-width` = 1
}