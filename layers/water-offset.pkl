extends "extends/water.pkl"

id = "water-offset"
minzoom = 8
filter {
    "=="
    "$type"
    "Polygon"
}
layout {
    visibility = "visible"
}
paint {
    `fill-color` = "#a0c8f0"
    `fill-opacity` = 1
    `fill-translate` {
        base = 1
        stops {
            new {
                6
                new {
                    2
                    0
                }
            }
            new {
                8
                new {
                    0
                    0
                }
            }
        }
    }
}