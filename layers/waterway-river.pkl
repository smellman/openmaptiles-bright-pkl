open module `waterway-river`
extends "extends/waterway.pkl"

id = "waterway-river"
filter {
    "all"
    new {
        "=="
        "class"
        "river"
    }
    new {
        "!="
        "brunnel"
        "tunnel"
    }
    new {
        "=="
        "intermittent"
        0
    }
}
layout {
    `line-cap` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#a0c8f0"
    `line-width` {
        base = 1.2
        stops {
            new {
                10
                0.8
            }
            new {
                20
                6
            }
        }
    }
}