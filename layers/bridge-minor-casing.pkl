extends "extends/transportation.pkl"

id = "bridge-minor-casing"
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "=="
        "brunnel"
        "bridge"
    }
    new {
        "in"
        "class"
        "minor"
        "service"
        "track"
    }
}
layout {
    `line-cap` = "butt"
    `line-join` = "round"
}
paint {
    `line-color` = "#cfcdca"
    `line-opacity` {
        stops {
            new {
                12
                0
            }
            new {
                12.5
                1
            }
        }
    }
    `line-width` {
        base = 1.2
        stops {
            new {
                12
                0.5
            }
            new {
                13
                1
            }
            new {
                14
                6
            }
            new {
                20
                24
            }
        }
    }
}