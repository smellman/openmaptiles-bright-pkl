extends "extends/transportation.pkl"

id = "highway-minor"
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "!in"
        "brunnel"
        "tunnel"
    }
    new {
        "in"
        "class"
        "minor"
        "service"
        "track"
    }
}
layout {
    `line-cap` = "round"
    `line-join` = "round"
}
paint {
    `line-color` = "#fff"
    `line-opacity` = 1
    `line-width` {
        base = 1.2
        stops {
            new {
                13.5
                0
            }
            new {
                14
                2.5
            }
            new {
                20
                11.5
            }
        }
    }
}