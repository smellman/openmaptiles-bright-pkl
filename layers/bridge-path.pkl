extends "extends/transportation.pkl"

id = "bridge-path"
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "=="
        "brunnel"
        "bridge"
    }
    new {
        "=="
        "class"
        "path"
    }
    new {
        "!="
        "subclass"
        "steps"
    }
}
paint {
    `line-color` = "#cba"
    `line-dasharray` {
        1.5
        0.75
    }
    `line-width` {
        base = 1.2
        stops {
            new {
                15
                1.2
            }
            new {
                20
                4
            }
        }
    }
}