open module `road-oneway`
extends "extends/transportation.pkl"

id = "road-oneway"
type = "symbol"
minzoom = 15
filter {
    "all"
    new {
        "=="
        "oneway"
        1
    }
    new {
        "in"
        "class"
        "moterway"
        "trunk"
        "primary"
        "secondary"
        "tertiary"
        "minor"
        "service"
    }
}
layout {
    `icon-image` = "oneway"
    `icon-padding` = 2
    `icon-rotate` = 90
    `icon-rotation-alignment` = "map"
    `icon-size` {
        stops {
            new {
                15
                0.5
            }
            new {
                19
                1
            }
        }
    }
    `symbol-placement` = "line"
    `symbol-spacing` = 75
}
paint {
    `icon-opacity` = 0.5
}