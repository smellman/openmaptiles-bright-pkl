extends "extends/transportation-name.pkl"
import "../variables.pkl" as variables

id = "highway-shield"
minzoom = 8
filter {
    "all"
    new {
        "<="
        "ref_length"
        6
    }
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "!in"
        "network"
        "us-interstate"
        "us-highway"
        "us-state"
    }
}
layout {
    `icon-image` = "road_{ref_length}"
    `icon-rotation-alignment` = "viewport"
    `icon-size` = 1
    `symbol-placement` {
        base = 1
        stops {
            new {
                10
                "point"
            }
            new {
                11
                "line"
            }
        }
    }
    `symbol-spacing` = 200
    `text-field` = "{ref}"
    `text-font` = variables.text_font_regular
    `text-rotation-alignment` = "viewport"
    `text-size` = 10
}