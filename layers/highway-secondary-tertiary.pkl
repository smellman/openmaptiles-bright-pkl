extends "extends/transportation.pkl"

id = "highway-secondary-tertiary"
filter {
    "all"
    new {
        "!in"
        "brunnel"
        "bridge"
        "tunnel"
    }
    new {
        "in"
        "class"
        "secondary"
        "tertiary"
    }
    new {
        "!="
        "ramp"
        1
    }
}
layout {
    `line-cap` = "round"
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#fea"
    `line-width` {
        base = 1.2
        stops {
            new {
                6.5
                0
            }
            new {
                8
                0.5
            }
            new {
                20
                13
            }
        }
    }
}