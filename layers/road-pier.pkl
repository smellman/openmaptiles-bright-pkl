extends "extends/transportation.pkl"

id = "road-pier"
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "in"
        "class"
        "pier"
    }
}
layout {
    `line-cap` = "round"
    `line-join` = "round"
}
paint {
    `line-color` = "#f8f4f0"
    `line-width` {
        base = 1.2
        stops {
            new {
                15
                1
            }
            new {
                17
                4
            }
        }
    }
}