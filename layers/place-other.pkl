extends "extends/place.pkl"
import "../variables.pkl" as v

id = "place-other"
filter {
    "!in"
    "class"
    "city"
    "town"
    "village"
    "state"
    "country"
    "continent"
}
layout {
    `text-field` = v.text_field_with_return
    `text-font` = v.text_font_bold
    `text-letter-spacing` = 0.1
    `text-size` {
        base = 1.2
        stops {
            new {
                12
                10
            }
            new {
                15
                14
            }
        }
    }
    `text-transform` = "uppercase"
    visibility = "visible"
}
paint {
    `text-color` = "#633"
    `text-halo-color` = "rgba(255,255,255,0.8)"
    `text-halo-width` = 1.2
}