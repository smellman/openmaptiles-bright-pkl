extends "extends/tunnel.pkl"

id = "tunnel-service-track-casing"
filter {
    "all"
    new {
        "=="
        "brunnel"
        "tunnel"
    }
    new {
        "in"
        "class"
        "service"
        "track"
    }
}
layout {
    `line-join` = "round"
}
paint {
    `line-color` = "#cfcdca"
    `line-dasharray` {
        0.5
        0.25
    }
    `line-width` {
        base = 1.2
        stops {
            new {
                15
                1
            }
            new {
                16
                4
            }
            new {
                20
                11
            }
        }
    }
}