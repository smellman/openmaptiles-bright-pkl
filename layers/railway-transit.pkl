extends "extends/transportation.pkl"

id = "railway-transit"
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "=="
        "class"
        "transit"
    }
    new {
        "!in"
        "brunnel"
        "tunnel"
    }
}
layout {
    visibility = "visible"
}
paint {
    `line-color` = "hsla(0, 0%, 73%, 0.77)"
    `line-width` {
        base = 1.4
        stops {
            new {
                14
                0.4
            }
            new {
                20
                1
            }
        }
    }
}