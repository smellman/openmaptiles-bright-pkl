extends "extends/transportation.pkl"

id = "highway-path-steps-casing"
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "!in"
        "brunnel"
        "bridge"
        "tunnel"
    }
    new {
        "in"
        "class"
        "path"
    }
    new {
        "in"
        "subclass"
        "steps"
    }
}
layout {
    `line-cap` = "butt"
    `line-join` = "round"
}
paint {
    `line-color` = "#cfcdca"
    `line-opacity` {
        stops {
            new {
                12
                0
            }
            new {
                12.5
                1
            }
        }
    }
    `line-width` {
        base = 1.2
        stops {
            new {
                12
                0.5
            }
            new {
                13
                1
            }
            new {
                14
                2
            }
            new {
                20
                9.25
            }
        }
    }
}