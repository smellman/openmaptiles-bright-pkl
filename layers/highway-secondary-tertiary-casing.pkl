extends "extends/transportation.pkl"

id = "highway-secondary-tertiary-casing"
filter {
    "all"
    new {
        "!in"
        "brunnel"
        "bridge"
        "tunnel"
    }
    new {
        "in"
        "class"
        "secondary"
        "tertiary"
    }
    new {
        "!="
        "ramp"
        1
    }
}
layout {
    `line-cap` = "butt"
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#e9ac77"
    `line-opacity` = 1
    `line-width` {
        base = 1.2
        stops {
            new {
                8
                1.5
            }
            new {
                20
                17
            }
        }
    }
}