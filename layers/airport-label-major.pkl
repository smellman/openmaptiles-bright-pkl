extends "extends/aerodrome-label.pkl"
import "../variables.pkl" as variables

id = "airport-label-major"
minzoom = 10
filter {
    "all"
    new {
        "has"
        "iata"
    }
}
layout {
    `icon-image` = "airport_11"
    `icon-size` = 1
    `text-anchor` = "top"
    `text-field` = variables.text_field_with_return
    `text-font` = variables.text_font_regular
    `text-max-width` = 9
    `text-offset` {
        0
        0.6
    }
    `text-optional` = true
    `text-padding` = 2
    `text-size` = 12
    visibility = "visible"
}
paint {
    `text-color` = "#666"
    `text-halo-blur` = 0.5
    `text-halo-color` = "#ffffff"
    `text-halo-width` = 1
}