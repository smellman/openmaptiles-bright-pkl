extends "extends/transportation-line.pkl"

id = "tunnel-motorway-casing"
filter {
    "all"
    new {
        "=="
        "brunnel"
        "tunnel"
    }
    new {
        "=="
        "class"
        "motorway"
    }
}
layout {
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#e9ac77"
    `line-dasharray` {
        0.5
        0.25
    }
    `line-width` {
        base = 1.2
        stops {
            new {
                5
                0.4
            }
            new {
                6
                0.6
            }
            new {
                7
                1.5
            }
            new {
                20
                22
            }
        }
    }
}