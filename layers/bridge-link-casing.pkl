extends "extends/transportation.pkl"

id = "bridge-link-casing"
filter {
    "all"
    new {
        "=="
        "brunnel"
        "bridge"
    }
    new {
        "in"
        "class"
        "trunk"
        "primary"
        "secondary"
        "tertiary"
    }
    new {
        "=="
        "ramp"
        1
    }
}
layout {
    `line-join` = "round"
}
paint {
    `line-color` = "#e9ac77"
    `line-opacity` = 1
    `line-width` {
        base = 1.2
        stops {
            new {
                12
                1
            }
            new {
                13
                3
            }
            new {
                14
                4
            }
            new {
                20
                19
            }
        }
    }
}