extends "extends/transportation.pkl"

id = "highway-motorway-casing"
minzoom = 4
filter {
    "all"
    new {
        "!in"
        "brunnel"
        "bridge"
        "tunnel"
    }
    new {
        "=="
        "class"
        "motorway"
    }
    new {
        "!="
        "ramp"
        1
    }
}
layout {
    `line-cap` = "butt"
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#e9ac77"
    `line-opacity` {
        stops {
            new {
                4
                0
            }
            new {
                5
                1
            }
        }
    }
    `line-width` {
        base = 1.2
        stops {
            new {
                4
                0
            }
            new {
                5
                0.4
            }
            new {
                6
                0.6
            }
            new {
                7
                1.5
            }
            new {
                20
                22
            }
        }
    }
}