extends "extends/transportation.pkl"

id = "bridge-motorway-casing"
filter {
    "all"
    new {
        "=="
        "brunnel"
        "bridge"
    }
    new {
        "=="
        "class"
        "motorway"
    }
    new {
        "!="
        "ramp"
        1
    }
}
layout {
    `line-join` = "round"
}
paint {
    `line-color` = "#e9ac77"
    `line-width` {
        base = 1.2
        stops {
            new {
                5
                0.4
            }
            new {
                6
                0.6
            }
            new {
                7
                1.5
            }
            new {
                20
                26
            }
        }
    }
}