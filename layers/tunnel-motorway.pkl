extends "extends/transportation-line.pkl"

id = "tunnel-motorway"
filter {
    "all"
    new {
        "=="
        "brunnel"
        "tunnel"
    }
    new {
        "=="
        "class"
        "motorway"
    }
}
layout {
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#ffdaa6"
    `line-width` {
        base = 1.2
        stops {
            new {
                6.5
                0
            }
            new {
                7
                0.5
            }
            new {
                20
                18
            }
        }
    }
}