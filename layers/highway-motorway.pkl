extends "extends/transportation.pkl"

id = "highway-motorway"
minzoom = 5
filter {
    "all"
    new {
        "=="
        "$type"
        "LineString"
    }
    new {
        "!in"
        "brunnel"
        "bridge"
        "tunnel"
    }
    new {
        "=="
        "class"
        "motorway"
    }
    new {
        "!="
        "ramp"
        1
    }
}
layout {
    `line-cap` = "round"
    `line-join` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#fc8"
    `line-width` {
        base = 1.2
        stops {
            new {
                6.5
                0
            }
            new {
                7
                0.5
            }
            new {
                20
                18
            }
        }
    }
}