extends "extends/place.pkl"
import "../variables.pkl" as v

id = "place-country-1"
filter {
    "all"
    new {
        "=="
        "class"
        "country"
    }
    new {
        "=="
        "rank"
        1
    }
    new {
        "has"
        "iso_a2"
    }
}
layout {
    `text-field` = v.text_field_laten
    `text-font` = v.text_font_bold
    `text-max-width` = 6.25
    `text-size` {
        stops {
            new {
                1
                11
            }
            new {
                4
                17
            }
        }
    }
    `text-transform` = "uppercase"
    visibility = "visible"
}
paint {
    `text-color` = "#334"
    `text-halo-blur` = 1
    `text-halo-color` = "rgba(255,255,255,0.8)"
    `text-halo-width` = 2
}