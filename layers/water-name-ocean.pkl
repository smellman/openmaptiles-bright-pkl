extends "extends/water-name.pkl"
import "../variables.pkl" as variables

id = "water-name-ocean"
filter {
    "all"
    new {
        "=="
        "$type"
        "Point"
    }
    new {
        "=="
        "class"
        "ocean"
    }
}
layout {
    `symbol-placement` = "point"
    `symbol-spacing` = 350
    `text-field` = variables.text_field_laten
    `text-font` = variables.text_font_italic
    `text-letter-spacing` = 0.2
    `text-max-width` = 5
    `text-rotation-alignment` = "map"
    `text-size` = 14
}
paint {
    `text-color` = "#74aee9"
    `text-halo-color` = "rgba(255,255,255,0.7)"
    `text-halo-width` = 1.5
}