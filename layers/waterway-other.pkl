open module `waterway-other`
extends "extends/waterway.pkl"

id = "waterway-other"
filter {
    "all"
    new {
        "!in"
        "class"
        "canal"
        "river"
        "stream"
    }
    new {
        "=="
        "intermittent"
        0
    }
}
layout {
    `line-cap` = "round"
    visibility = "visible"
}
paint {
    `line-color` = "#a0c8f0"
    `line-width` {
        base = 1.3
        stops {
            new {
                13
                0.5
            }
            new {
                20
                2
            }
        }
    }
}